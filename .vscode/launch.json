{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch CocktailChooser.API",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-api",
      "program": "${workspaceFolder}/CocktailChooser.API/bin/Debug/net8.0/CocktailChooser.API.dll",
      "args": [],
      "cwd": "${workspaceFolder}/CocktailChooser.API",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
        "uriFormat": "%s/swagger"
      }
    }
  ]
}
